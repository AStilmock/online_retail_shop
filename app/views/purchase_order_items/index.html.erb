<!-- Index Page -->
<h1 class="text-2xl font-bold">Purchase Order Items Index Page</h1>

<div id="purchase_order_items" data-controller="shopping">
  <h2 class="list-header">All Purchase Order Items</h2>
  <ul class="list">
    <% @purchase_order_items.each do |purchase_order_item| %>
      <li class="list-item">
        <%= link_to "Purchase Order Item ##{purchase_order_item.id}", purchase_order_item_path(purchase_order_item), data: { shopping_target: "link" } %>
        <p class="purchase-order-item-info">
          <span>Item: <%= purchase_order_item.item.name %></span>
          <span>Quantity: <%= purchase_order_item.quantity %></span>
          <span>Purchase Order: #<%= purchase_order_item.purchase_order.id %></span>
        </p>
      </li>
    <% end %>
  </ul>
</div>

<!-- Home button below the list -->
<div class="home-button-container" data-controller="shopping">
  <%= link_to "Home", root_path, class: "home-button", data: { target: "shopping.link" } %>
</div>

<!-- Index Page -->
<h1 class="text-2xl font-bold">Employees Index Page</h1>

<div id="employees" data-controller="shopping">
  <h2 class="list-header">All Employees</h2>
  <ul class="list">
    <% @employees.each do |employee| %>
      <li class="list-item">
        <%= link_to "#{employee.first_name} #{employee.last_name}", employee_path(employee), data: { shopping_target: "link" } %>
        <p class="employee-info">
          <span>Email: <%= employee.email %></span>
          <span>Category: <%= employee.category %></span>
        </p>
      </li>
    <% end %>
  </ul>
</div>

<!-- Home button below the list -->
<div class="home-button-container" data-controller="shopping">
  <%= link_to "Home", root_path, class: "home-button", data: { target: "shopping.link" } %>
</div>

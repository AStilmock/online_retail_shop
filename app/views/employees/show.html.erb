<!-- Show Page -->
<h1 class="text-2xl font-bold">Employee Show Page</h1>

<div class="employee-details">
  <h2><%= @employee.first_name %> <%= @employee.last_name %></h2>
  
  <div class="detail-section">
    <p><strong>Email:</strong> <%= @employee.email %></p>
    <p><strong>Address:</strong> <%= @employee.address %></p>
    <p><strong>Phone:</strong> <%= @employee.phone %></p>
    <p><strong>Category:</strong> <%= @employee.category %></p>
    <p><strong>User Account:</strong> <%= link_to @employee.user.email, user_path(@employee.user) %></p>
    <p><strong>Created At:</strong> <%= @employee.created_at.strftime("%B %d, %Y") %></p>
  </div>
</div>

<div class="navigation-links">
  <%= link_to "Back to Employees", employees_path, class: "back-link" %>
  <%= link_to "Home", root_path, class: "back-link" %>
</div>

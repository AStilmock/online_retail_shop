<!-- Show Page -->
<h1 class="text-2xl font-bold">Sale Invoice Show Page</h1>

<div class="sale-invoice-details">
  <h2>Sale Invoice #<%= @sale_invoice.id %></h2>
  
  <div class="detail-section">
    <p><strong>Date/Time:</strong> <%= @sale_invoice.date_time&.strftime("%B %d, %Y at %I:%M %p") %></p>
    <p><strong>Sale:</strong> <%= link_to "Sale ##{@sale_invoice.sale.id}", sale_path(@sale_invoice.sale) %></p>
    <p><strong>Invoice:</strong> <%= link_to "Invoice ##{@sale_invoice.invoice.id}", invoice_path(@sale_invoice.invoice) %></p>
    <p><strong>User:</strong> <%= link_to @sale_invoice.user.email, user_path(@sale_invoice.user) %></p>
    <p><strong>Discount:</strong> <%= link_to @sale_invoice.discount.name, discount_path(@sale_invoice.discount) %></p>
    <p><strong>Created At:</strong> <%= @sale_invoice.created_at.strftime("%B %d, %Y") %></p>
  </div>
</div>

<div class="navigation-links">
  <%= link_to "Back to Sale Invoices", sale_invoices_path, class: "back-link" %>
  <%= link_to "Home", root_path, class: "back-link" %>
</div>

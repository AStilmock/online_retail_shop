<!-- Index Page -->
<h1 class="text-2xl font-bold">Sales Index Page</h1>

<div id="sales" data-controller="shopping">
  <h2 class="list-header">All Sales</h2>
  <ul class="list">
    <% @sales.each do |sale| %>
      <li class="list-item">
        <%= link_to "Sale ##{sale.id}", sale_path(sale), data: { shopping_target: "link" } %>
        <p class="sale-info">
          <span>Date: <%= sale.date_time&.strftime("%B %d, %Y") %></span>
          <span>Sub Total: $<%= sprintf("%.2f", sale.sub_total_sale_price / 100.0) %></span>
          <span>Total: $<%= sprintf("%.2f", sale.total_sale_price / 100.0) %></span>
          <span>Status: <%= sale.complete? ? "Complete" : "Pending" %></span>
        </p>
      </li>
    <% end %>
  </ul>
</div>

<!-- Home button below the list -->
<div class="home-button-container" data-controller="shopping">
  <%= link_to "Home", root_path, class: "home-button", data: { target: "shopping.link" } %>
</div>

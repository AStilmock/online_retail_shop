<h1 class="text-2xl font-bold text-center text-primary">Hello <%= @user.email %></h1>
<div data-controller="shopping">
  <div data-shopping-target="message">
    <h3 class="text-4xl font-bold text-center text-blue-600">
      Here be the shopping page - view our inventory selection below!
    </h3>

    <div id="categories">
      <h2>'Sample Item List'</h2>
      <ul>
        <% @items.each do |item| %>
          <li><%= link_to item.name, user_item_path(item.id) %></li>
        <% end %>
      </ul>
    </div>

    <div id="items">
      <h2>'Product Category List'</h2>
      <ul>
        <% @categories.each do |cat| %>
          <li><%= link_to cat.name, user_category_path(cat.id) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
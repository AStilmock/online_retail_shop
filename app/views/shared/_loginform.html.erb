<div data-controller="login"> 
  <%= form_with url: login_path, method: :post, data: { controller: "login", login_target: "form" }, class: "w-full form-container" do |f| %>
    <div class="field" data-login-target="input">
      <%= f.label :email, class: "font-bold" %>
      <%= f.text_field :email, class: "border rounded p-2 w-full", data: { login_target: "input" } %>
    </div>

    <div class="field" data-login-target="input">
      <%= f.label :password, class: "font-bold" %><br />
      <%= f.password_field :password, class: "border rounded p-2 w-full", data: { login_target: "input" } %>
    </div>

    <div class="actions">
      <%= f.submit "Login", class: "submit-button" %>
    </div>
  <% end %>
</div>
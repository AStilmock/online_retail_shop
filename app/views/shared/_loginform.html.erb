<div data-controller="login"> 
  <%= form_with url: login_path, method: :post, data: { controller: "login", target: "login.form" }, class: "w-full" do |f| %>
    <div class="field" data-target="login.input">
      <%= f.label :email, class: "font-bold" %>
      <%= f.text_field :email, class: "border rounded p-2 w-full", data: { target: "login.input" } %>
    </div>

    <div class="field" data-target="login.input">
      <%= f.label :password, class: "font-bold" %><br />
      <%= f.password_field :password, class: "border rounded p-2 w-full", data: { target: "login.input" } %>
    </div>

    <div class="actions">
      <%= f.submit "Login", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
    </div>
  <% end %>
</div>  

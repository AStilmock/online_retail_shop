<!-- Show Page -->
<h1 class="text-2xl font-bold">Invoice Show Page</h1>

<div class="invoice-details">
  <h2>Invoice #<%= @invoice.id %></h2>
  
  <div class="detail-section">
    <p><strong>Date/Time:</strong> <%= @invoice.date_time&.strftime("%B %d, %Y at %I:%M %p") %></p>
    <p><strong>Sub Total Sale Price:</strong> $<%= sprintf("%.2f", @invoice.sub_total_sale_price / 100.0) %></p>
    <p><strong>Status:</strong> <%= @invoice.complete? ? "Complete" : "Pending" %></p>
    <p><strong>Created At:</strong> <%= @invoice.created_at.strftime("%B %d, %Y") %></p>
  </div>

  <div class="invoice-items-section">
    <h3>Invoice Items</h3>
    <ul>
      <% @invoice_items.each do |invoice_item| %>
        <li>
          <%= link_to invoice_item.item.name, item_path(invoice_item.item) %> - 
          Quantity: <%= invoice_item.quantity %> - 
          Discount: <%= invoice_item.discount.name %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="related-sales">
    <h3>Related Sales</h3>
    <ul>
      <% @invoice.sales.each do |sale| %>
        <li><%= link_to "Sale ##{sale.id}", sale_path(sale) %></li>
      <% end %>
    </ul>
  </div>
</div>

<div class="navigation-links">
  <%= link_to "Back to Invoices", invoices_path, class: "back-link" %>
  <%= link_to "Home", root_path, class: "back-link" %>
</div>

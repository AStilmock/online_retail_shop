<!-- Index Page -->
<h1 class="text-2xl font-bold">Invoices Index Page</h1>

<div id="invoices" data-controller="shopping">
  <h2 class="list-header">All Invoices</h2>
  <ul class="list">
    <% @invoices.each do |invoice| %>
      <li class="list-item">
        <%= link_to "Invoice ##{invoice.id}", invoice_path(invoice), data: { shopping_target: "link" } %>
        <p class="invoice-info">
          <span>Date: <%= invoice.date_time&.strftime("%B %d, %Y") %></span>
          <span>Sub Total: $<%= sprintf("%.2f", invoice.sub_total_sale_price / 100.0) %></span>
          <span>Status: <%= invoice.complete? ? "Complete" : "Pending" %></span>
        </p>
      </li>
    <% end %>
  </ul>
</div>

<!-- Home button below the list -->
<div class="home-button-container" data-controller="shopping">
  <%= link_to "Home", root_path, class: "home-button", data: { target: "shopping.link" } %>
</div>

<!-- Show Page -->
<h1 class="text-2xl font-bold">Discount Show Page</h1>

<div class="discount-details">
  <h2><%= @discount.name %></h2>
  
  <div class="detail-section">
    <p><strong>Category:</strong> <%= @discount.category %></p>
    <p><strong>Description:</strong> <%= @discount.description %></p>
    <p><strong>Price Percent:</strong> <%= @discount.price_percent %>%</p>
    <p><strong>Amount:</strong> $<%= sprintf("%.2f", @discount.amount / 100.0) %></p>
    <p><strong>Created At:</strong> <%= @discount.created_at.strftime("%B %d, %Y") %></p>
  </div>

  <div class="related-items">
    <h3>Related Items</h3>
    <ul>
      <% @discount.items.each do |item| %>
        <li><%= link_to item.name, item_path(item) %></li>
      <% end %>
    </ul>
  </div>
</div>

<div class="navigation-links">
  <%= link_to "Back to Discounts", discounts_path, class: "back-link" %>
  <%= link_to "Home", root_path, class: "back-link" %>
</div>

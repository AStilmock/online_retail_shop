<!-- Index Page -->
<h1 class="text-2xl font-bold">Discounts Index Page</h1>

<div id="discounts" data-controller="shopping">
  <h2 class="list-header">All Discounts</h2>
  <ul class="list">
    <% @discounts.each do |discount| %>
      <li class="list-item">
        <%= link_to discount.name, discount_path(discount), data: { shopping_target: "link" } %>
        <p class="discount-info">
          <span>Category: <%= discount.category %></span>
          <span>Price Percent: <%= discount.price_percent %>%</span>
          <span>Amount: $<%= sprintf("%.2f", discount.amount / 100.0) %></span>
        </p>
      </li>
    <% end %>
  </ul>
</div>

<!-- Home button below the list -->
<div class="home-button-container" data-controller="shopping">
  <%= link_to "Home", root_path, class: "home-button", data: { target: "shopping.link" } %>
</div>

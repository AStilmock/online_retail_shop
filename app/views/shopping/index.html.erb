<div class="mb-8" data-controller="shopping">
  <h1 class="text-3xl font-bold text-gray-900 mb-2">Shopping Page</h1>
  <p class="text-gray-600">View our inventory selection below!</p>
</div>

<div id="items" class="mb-8" data-controller="shopping">
  <h2 class="text-2xl font-semibold text-gray-800 mb-4">Sample Item List</h2>
  <ul class="space-y-3">
    <% @items.each do |item| %>
      <li class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 hover:shadow-md transition-shadow">
        <%= link_to item.name, item_path(item), 
            class: "text-blue-700 hover:text-blue-900 font-medium text-lg", 
            data: { shopping_target: "link" } %>
      </li>
    <% end %>
  </ul>
</div>

<div id="categories" class="mb-8" data-controller="shopping">
  <h2 class="text-2xl font-semibold text-gray-800 mb-4">Product Category List</h2>
  <ul class="space-y-3">
    <% @categories.each do |cat| %>
      <li class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 hover:shadow-md transition-shadow">
        <%= link_to cat.name, category_path(cat), 
            class: "text-blue-700 hover:text-blue-900 font-medium text-lg", 
            data: { shopping_target: "link" } %>
      </li>
    <% end %>
  </ul>
</div>

<!-- Home button below the lists -->
<div class="mt-8 flex justify-center" data-controller="shopping">
  <%= link_to "Home", root_path, 
      class: "bg-blue-700 hover:bg-blue-800 text-white font-medium px-6 py-3 rounded-lg transition-colors", 
      data: { target: "shopping.link" } %>
</div>
